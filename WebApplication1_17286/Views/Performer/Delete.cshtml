@model WebApplication1_17286.Models.Performer

<h2>Delete Performer</h2>
<p>Are you sure you want to delete this performer?</p>

<div>
    <h4>@Model.Name</h4>
    <dl>
        <dt>Genre</dt>
        <dd>@Model.Genre</dd>

        <dt>Birth Date</dt>
        <dd>@Model.BirthDate.ToString("d")</dd>

        <dt>Country</dt>
        <dd>@Model.Country</dd>
    </dl>

    <form asp-action="DeleteConfirmed" method="post">
        <input type="hidden" asp-for="Id" /> <!-- Hidden field for the ID -->
        <button type="submit">Delete</button>
        <a asp-action="Index">Cancel</a>
    </form>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
