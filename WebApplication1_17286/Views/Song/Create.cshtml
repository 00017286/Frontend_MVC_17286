@model WebApplication1_17286.Models.Song

<h2>Create a New Song</h2>
<form asp-action="Create" method="post">
    <div>
        <label>Title:</label>
        <input asp-for="Title" />
    </div>
    <div>
        <label>Genre:</label>
        <input asp-for="Genre" />
    </div>
    <div>
        <label>Release Year:</label>
        <input asp-for="ReleaseYear" type="number" />
    </div>
    <div>
        <label>Performer:</label>
        <!-- Assuming Performer has fields like Name in its definition -->
        <input asp-for="SongPerformer.Name" placeholder="Performer Name" />
    </div>
    <button type="submit">Create</button>
</form>
